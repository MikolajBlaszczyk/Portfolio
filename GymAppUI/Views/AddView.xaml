        <!--
        <TextBox x:Name="NameWorkout" Grid.Row="1" Grid.Column="1" Text="Give a name" Grid.ColumnSpan="2" Margin="15,0,15,0" HorizontalAlignment="Stretch" TextAlignment="Center"/>
        
